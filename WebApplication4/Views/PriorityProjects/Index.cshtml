@model IEnumerable<WebApplication4.Models.PriorityProjects>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>


<form action="/PriorityProjects/Index" method="post">
    <div class="row">
        <div class="col-md-4">
            @Html.DropDownList("ddlyear", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.DropDownList("DDLSemester", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="serch" />
        </div>
    </div>
</form>
<br>




<table class="table table-hover">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Projects.projectTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priorityLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priorityReason)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Projects.projectTitle)
            </td>
            <td>

                @switch (item.priorityLevel)
                {
                    case "1":
                        <span>  High   </span>
                        break;
                    case "2":
                        <span>
                            Medium
                        </span>

                        break;
                    case "3":
                        <span>
                            Low
                        </span>

                        break;
                    case "4":
                        <span>
                            None
                        </span>

                        break;

                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priorityReason)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.projectID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.projectID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.projectID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

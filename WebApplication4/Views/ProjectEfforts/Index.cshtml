@model IEnumerable<WebApplication4.Models.ProjectEfforts>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.effortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.effortRankValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.effortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.effortRankValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.effortID }, new { @class = "btn btn-primary" }) |
